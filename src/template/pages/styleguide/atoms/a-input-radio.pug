extends ../../../layout/styleguide

append config
  - var template = 't-styleguide'
  - var title = "Inputs radio"
  - var metaDesc = "Inputs radio - CSS / HTML"
  - var path = './../../'

block content
  .hf-head
    .hf-wrapper
      h1 Input radio
      nav
        a(href="#types") Types
        a(href="#states") États
  .hf-wrapper
    .hf-content
      h2#types Types
      h3 Input radio
    :code
      <div class="a-inputRadio">
        <input id="inputRadio-base-1" type="radio" name="inputRadio-base" />
        <label for="inputRadio-base-1">Radio A</label>
      </div>
    .hf-content
      h2#states États
      h3 État : disabled
    :code
      <div class="a-inputRadio">
        <input id="inputRadio-base-2" type="radio" name="inputRadio-base" disabled/>
        <label for="inputRadio-base-2">Radio A</label>
      </div>
    .hf-content
      h3 État : error
    :code
      <div class="a-inputRadio is-error">
        <input id="inputRadio-base-3" type="radio" name="inputRadio-base"/>
        <label for="inputRadio-base-3">Radio A</label>
      </div>
